<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Caesar.SearchPage"
             NavigationPage.HasNavigationBar="False"
             >

    <StackLayout>
        <Image Source="Resources/CaesarLogo.png" HeightRequest="100" Margin="10" />
        
        <Entry x:Name="ingredientsEntry" Placeholder="Enter ingredients..." />
        <Button 
            x:Name="searchButton"
            Text="Search" 
            Clicked="SearchRecipes" />
        <ListView 
            ItemsSource="{Binding}"
            ItemTapped="OnViewRecipe"
            >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding Image}" Text="{Binding Label}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
